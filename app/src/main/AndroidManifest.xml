<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shadow.coctool">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".COCToolApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".avatar.AvatarListActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".avatar.AvatarActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".avatar.SkillActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".avatar.AvatarEditActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".avatar.AvatarViewActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".dice.DicesActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".fragmentactivity.FragmentActivity"
            android:screenOrientation="portrait"
            />

    </application>

</manifest>